<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large_size">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_sub_item_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="تعديل"
            android:background="@drawable/shape_btn_bg_redius5"
            android:textSize="@dimen/txt_small_size"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_newspaper"/>
            <TextView
                android:id="@+id/my_sub_item_news_paper_name"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صحيفة الصيحة"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ly1"
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع الاشتراك:"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/my_sub_item_type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اشتراك شهري"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ly2"
            android:id="@+id/ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar_clock"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاريخ الاشتراك:"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/my_sub_item_start_date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-4-2020"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ly3"
            android:id="@+id/ly4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاريخ الانـتــهـاء:"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/my_sub_item_end_date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-5-2020"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_below="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"/>
</RelativeLayout>