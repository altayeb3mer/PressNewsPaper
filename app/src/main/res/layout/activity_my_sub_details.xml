<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewsPapers"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    android:id="@+id/container"
    android:background="@color/colorBackground">
    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/margin_normal_size"
                android:src="@drawable/paper_logo"
                android:scaleType="centerInside"/>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cat_shape_outline"
                        />
                    <TextView
                        android:id="@+id/txt2"
                        android:layout_toLeftOf="@+id/ic_2"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="نوع الاشتراك : "/>
                    <TextView
                        android:id="@+id/category"
                        android:layout_toLeftOf="@+id/txt2"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_newspaper"
                        />
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_toLeftOf="@+id/ic_1"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="سعر الاشتراك : "/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_toLeftOf="@+id/txt1"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cat_shape_outline"
                        />
                    <TextView
                        android:id="@+id/txt5"
                        android:layout_toLeftOf="@+id/ic_5"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="حالة الاشتراك : "/>
                    <TextView
                        android:id="@+id/subStatus"
                        android:layout_toLeftOf="@+id/txt5"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cat_shape_outline"
                        />
                    <TextView
                        android:id="@+id/txt6"
                        android:layout_toLeftOf="@+id/ic_6"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="مدة الاشتراك : "/>
                    <TextView
                        android:id="@+id/duration"
                        android:layout_toLeftOf="@+id/txt6"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_calendar_clock"
                        />
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_toLeftOf="@+id/ic_3"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="بداية الاشتراك : "/>
                    <TextView
                        android:id="@+id/textViewPublishPeriod"
                        android:layout_toLeftOf="@+id/txt3"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/publisDayLay"
                android:layout_marginTop="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size">
                    <ImageView
                        android:id="@+id/ic_4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_calendar_clock"
                        />
                    <TextView
                        android:id="@+id/txt4"
                        android:layout_toLeftOf="@+id/ic_4"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="نهاية الاشتراك : "/>
                    <TextView
                        android:id="@+id/textViewPublishOn"
                        android:layout_toLeftOf="@+id/txt4"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="الغد"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="@dimen/margin_large_size"
                android:id="@+id/btn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="موافق"
                android:background="@drawable/shape_btn_bg"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/txt_normal_size"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/progressLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/slider"
        android:clickable="true"
        android:focusable="true">
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>