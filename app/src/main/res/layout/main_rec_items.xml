<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:id="@+id/container"
    app:cardCornerRadius="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_marginTop="@dimen/margin_small_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_small_size"
            android:layout_marginBottom="@dimen/margin_small_size"
            app:cardCornerRadius="8dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/post_card_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/nav_backgrond2"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_above="@+id/lay_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layoutDirection="rtl">
            <androidx.appcompat.widget.AppCompatButton
                android:visibility="visible"
                android:id="@+id/post_card_newspaper_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="الانتباهة"
                android:background="@drawable/shape_btn_bg_redius5"
                android:textSize="@dimen/txt_normal_size14"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/post_card_title"
                android:textSize="@dimen/txt_normal_size14"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="اصابات جديدة بفيروس كورونا"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:maxEms="12"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_date"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layoutDirection="rtl">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الاحد 14-4-2020"
                    android:textSize="@dimen/txt_so_small_size"
                    />
                <TextView
                    android:id="@+id/category"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التصنيف: اخبار"
                    android:textSize="@dimen/txt_so_small_size"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_marginTop="@dimen/margin_small_size"
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#808080"/>
</RelativeLayout>