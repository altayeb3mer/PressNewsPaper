<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large_size">
        <RelativeLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_newspaper"/>
            <TextView
                android:id="@+id/news_item_name"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صحيفة الصيحة"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>
            <ImageView
                android:id="@+id/img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_newspaper"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ly1"
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_cat_shape_outline"/>
            <TextView
                android:id="@+id/news_item_type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_normal_size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سياسية"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ly2"
            android:id="@+id/ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar_clock"/>
            <TextView
                android:id="@+id/news_item_release_type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_normal_size14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسبوعية"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly3">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ly4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/news_item_release_time"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_normal_size14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تصدر يوم الاحد"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="اشتراك"
                android:background="@drawable/shape_btn_bg_redius5"
                android:textSize="@dimen/txt_small_size"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_below="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"/>
</RelativeLayout>