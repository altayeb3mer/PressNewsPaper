<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pressnewspaper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/paper_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/paper_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".Activity.MySubDetails"></activity>
        <activity android:name=".Activity.MySubActivity" />
        <activity android:name=".Activity.DeepLinkingActivity" />
        <activity android:name=".Activity.DeptPostsActivity" />
        <activity android:name=".Activity.NewSub" />
        <activity android:name=".Activity.NewsPaperDetails" />
        <activity android:name=".Activity.LoginOrRegister" />
        <activity
            android:name=".Activity.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WelcomeActivity" />
        <activity android:name=".Activity.PaperPostsActivity" />
        <activity android:name=".Activity.PostDetailsActivity" />
        <activity android:name=".Activity.NewsPapers" />
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.RegistrationActivity" />
        <activity android:name=".Activity.ConfirmActivity" />
        <activity android:name=".Activity.Login" />
        <activity android:name=".Activity.MainActivity" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>